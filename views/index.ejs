<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Note App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">
  <div class="main w-full min-h-screen flex flex-col items-center justify-center p-4 space-y-8">
    
    <!-- Form Section -->
    <div class="form bg-zinc-800 p-6 rounded-xl shadow-lg w-full max-w-md">
      <form action="/create" method="POST" class="flex flex-col space-y-4">
        <input
          class="block w-full px-4 py-2 rounded-md bg-zinc-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          type="text"
          placeholder="Title goes here"
          name="title"
        />
        <textarea
          class="w-full px-4 py-2 rounded-md bg-zinc-700 text-white placeholder-gray-400 resize-none h-32 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          placeholder="Write your task details"
          name="details"
        ></textarea>
        <input
          class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md cursor-pointer transition duration-300"
          type="submit"
          value="Create Task"
        />
      </form>
    </div>

    <!-- Task Section -->
    <div class="tasks flex flex-wrap gap-5 justify-center w-full max-w-4xl">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task w-72 px-5 py-4 rounded-md bg-zinc-800 shadow-md">
            <h1 class="text-white text-xl font-semibold mb-2"><%= val%> </h1>
         <div class="flex justify-between items-center">
          <a class="text-blue-500 inline-block hover:underline mr-4" href="/file/<%= val %>">Read more</a>
          <a 
            href="/edit/<%= val %>" 
            class="text-blue-500 hover:text-blue-400 font-semibold   transition duration-200"
          >
            Edit Filename
          </a>
         </div>
            
                 
      
        </div>
        <% }) %>
      <% } else { %>
        <div class="w-full text-center text-zinc-500 text-lg">No Task Yet</div>
      <% } %>
    </div>

    <!-- Hidden Example Tasks (Optional for template preview) -->
    <div class="hidden">
      <div class="task w-72 px-5 py-4 rounded-md bg-zinc-800 shadow-md">
        <h1 class="text-white text-xl font-semibold mb-2">Another task here</h1>
        <a class="text-blue-500 inline-block hover:underline" href="#">Read more</a>
      </div>
      <div class="task w-72 px-5 py-4 rounded-md bg-zinc-800 shadow-md">
        <h1 class="text-white text-xl font-semibold mb-2">Yet another task</h1>
        <a class="text-blue-500 inline-block hover:underline" href="#">Read more</a>
      </div>
    </div>

  </div>
</body>
</html>
